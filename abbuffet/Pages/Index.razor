@page "/"
@inherits IndexBase

<h1>Tavoli</h1>
<button class="btn btn-primary" @onclick="Aggiungi">Crea Tavolo</button>

@if (_tavoli == null)
{
    <p>Aggiungi un tavolo... a tavola!</p>
}
else
{
<div class="d-flex flex-row flex-wrap mt-4">
    @foreach (var t in _tavoli)
    {
        <div class="card" style="margin-bottom:10px; margin-right: 10px; padding:5px; width:200px">
            <p>@t.Descrizione</p>
            <div>
                <button class="btn btn-primary" @onclick="(() => Edit(t.IdTavolo.ToString()))">Modifica</button>
                <button class="btn btn-warning" @onclick="(() => Cancella(t.IdTavolo.ToString()))">Elimina</button>
            </div>
        </div>
    }
</div>
}